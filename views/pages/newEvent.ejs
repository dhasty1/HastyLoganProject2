<%- include('../partials/header.ejs')%>
    <main>
        <form method='POST' action="/events" enctype="multipart/form-data" id="new-form">
            <div class="form-category">
                <label for="category">Category </label>
                <select name="category" id="category" form="new-form" required>
                    <option value="">--Select a Category--</option>
                    <option value="Food Trucks">Food Trucks</option>
                    <option value="Special Events">Special Events</option>
                    <option value="Grand Openings">Grand Openings</option>
                    <option value="Brewery Events">Brewery Events</option>
                    <option value="Other>">Other</option>
                </select>
            </div>
            <div class="form-title">
                <label for="title">Title </label>
                <input type="text" value="" name="title" required>
            </div>
            <div class="form-host">
                <label for="host">Host</label>
                <input type="text" id="host" name="host" value="">
            </div>
            <div class="form-details">
                <label for="details">Description </label>
                <textarea name="details" placeholder="Details" rows="3" cols="23" required></textarea>
            </div>
            <div class="form-where">
                <label for="location">Location </label>
                <input type="text" value="" name="location" id="location" required>
            </div>
            <div class="form-start">
                <label for="start">Start </label>
                <input id="start" type="datetime-local" name="start" value="" required>
            </div>
            <div class="form-end">
                <label for="end">End </label>
                <input id="end" type="datetime-local" name="end" value="" required>
            </div>
            <div class="form-image">
                <label for="IMG">Image </label>
                <input type="file" name="IMG" required>
            </div>
            <div class="form-submit">
                <input type="submit" value="Submit">
            </div>
        </form>
    </main>
    <%- include('../partials/footer.ejs') %>